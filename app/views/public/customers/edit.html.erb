<div class="container">
  <header>
    <div class="function_title">
      <h2>登録情報編集</h2>
    </div>
  </header>
  <div>
    <%= form_with model: @customer, url: edit_public_customer_path, local: true do |f| %>



    <table class="table table-hober">

      <tr><td>名　　　　　前</td><td><%= f.text_field :last_name, placeholder: "姓を入力", style: "border: none" %><%= f.text_field :first_name, placeholder: "名を入力", style: "border: none" %></td></tr>
      <tr><td>フ　リ　ガ　ナ</td><td><%= f.text_field :last_name_kana, placeholder: "セイを入力", style: "border: none" %><%= f.text_field :first_name_kana, placeholder: "メイを入力", style: "border: none" %></td></tr>
      <tr><td>郵　便　番　号</td><td><%= f.text_field :postal_code, placeholder: "〒", style: "border: none" %></td></tr>
      <tr><td>住　　　　　所</td><td><%= f.text_field :address, placeholder: "住所を入力", style: "border: none", :size => "50*50" %></td></tr>
      <tr><td>電　話　番　号</td><td><%= f.text_field :telephone_number, placeholder: "TELを入力", style: "border: none" %></td></tr>
      <tr><td>メールアドレス</td><td><%= f.text_field :email, placeholder: "mailアドレスを入力", style: "border: none", :size => "30*30" %></td></tr>

    </table>
    <%= f.submit "編集内容を保存する", class:"btn btn-primary"%>
    <%= link_to "退会する", public_customers_unsubscribe_path(@customer.id), class:"btn btn-danger" %>
    <% end %>
  </div>
</div>
