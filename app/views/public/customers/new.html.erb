<div class="container">
  <header>
    <div class="function_title">
      <h2>新規会員登録</h2>
    </div>
  </header>
  <%= form_with model: @customer, url: public_customers_path, local: true do |f| %>
  <table class="table table-striped">

    <tr><td>名前</td><td><%= f.text_field :last_name, placeholder: "姓を入力", style: "border: none" %><%= f.text_field :first_name, placeholder: "名を入力", style: "border: none" %></td></tr>
    <tr><td>フリガナ</td><td><%= f.text_field :last_name_kana, placeholder: "セイを入力", style: "border: none" %><%= f.text_field :first_name_kana, placeholder: "メイを入力", style: "border: none" %></td></tr>
    <tr><td>郵便番号</td><td><%= f.text_field :postal_code, placeholder: "〒", style: "border: none" %></td></tr>
    <tr><td>住所</td><td><%= f.text_field :address, placeholder: "住所を入力", style: "border: none", :size => "50*50" %></td></tr>
    <tr><td>電話番号</td><td><%= f.text_field :telephone_number, placeholder: "TELを入力", style: "border: none" %></td></tr>
    <tr><td>メールアドレス</td><td><%= f.text_field :email, placeholder: "mailアドレスを入力", style: "border: none", :size => "30*30" %></td></tr>

  </table>
  <div class="switch"><%= f.submit "新規登録", class:"btn btn-success" %></div>
  <% end %>
  <h2>既に登録済の方</h2>
  


</div>
