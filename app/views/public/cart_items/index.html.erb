<div class="container">
  <div class="row">
    <div class="col-xs">
      <div class="function_title">
        <h2>ショッピングカート</h2>
      </div>
      
      <%= button_to 'カートを空にする', destroy_all_public_cart_items_path, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: "btn btn-danger" %>
      
      <table class="table table-striped">
        <thead class="head_data">
          <tr>
            <th></th>
            <th>商品名</th>
            <th>税込価格</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="cart_data">
          <% @cart_items.each do |cart| %>
          <tr>
            <td><%= attachment_image_tag @item, :image, format: 'png', fallback: "no_image.jpg", size: "40x40" %></td>
            <td><%= cart.item.name %></td>
            <td align="right"><%= cart.item.price*1.1.floor %></td>
            <td align="right"><%= cart.amount %> </td>
            <td align="right"><%= cart.amount*(cart.item.price*1.1.floor) %> </td>
            <td><%= link_to "削除する", public_cart_item_path(cart.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %></td>
          </tr>
            <% end %>
          </tbody>
          
        </table>
        <div><%= link_to "買い物を続ける", public_items_path, class: "btn btn-success" %></div>
      </div>
    </div>
  </div>

