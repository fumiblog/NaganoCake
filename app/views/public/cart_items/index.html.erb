<div class="container">
  <div class="row">
    <div class="col-xs">
      <div class="function_title">
        <h2>ショッピングカート</h2>
      </div>

      <%= button_to 'カートを空にする', destroy_all_public_cart_items_path, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: "btn btn-danger" %>

      <table class="table table-striped">
        <thead class="head_data">
          <tr>
            <th></th>
            <th>商品名</th>
            <th>税込価格</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="cart_data">
          <% @sum = 0 %>
          <% @cart_items.each do |f| %>
          <tr>
            <td><%= attachment_image_tag @item, :image, format: 'png', fallback: "no_image.jpg", size: "40x40" %></td>
            <td><%= f.item.name %></td>
            <td class="price"><%= (f.item.price*1.1.floor).to_s(:delimited) %></td>
            <td class="price"><%= f.amount %> </td>
            <td class="price"><%= (f.amount*(f.item.price*1.1.floor)).to_s(:delimited) %></td>
            <td><%= link_to "削除する", public_cart_item_path(f.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %></td>
          </tr>
          <div class="total"><% @sum += f.amount*(f.item.price*1.1.floor) %></div>
          <% end %>
          <div></div>
        </tbody>
        </table>
        <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
          合計金額　¥<%= @sum %>
      </div>
      <div class="nyuryokuhe">
        <%= link_to "情報入力に進む", new_public_order_path, :style => "font-size: 20px", class: "btn btn-success" %>
      </div>
    </div>
  </div>

