<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h3>ジャンル検索</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-9">
      <h3>商品一覧</h3>
      
      <section class="section">
        <div class="container">

            <% @items.each do |item| %>
              <div class="row">
                <div class="col-md-3">
                  <div class="cardf-content">
                    <div class="card-image">
                      <figure class="image">
                        <%= link_to public_item_path(item) do %>
                          <%= attachment_image_tag item, :image, format: 'png', fallback: "no_image.jpg", size: "150x150" %>
                        <% end %>
                      </figure>
                    </div>
                  </div>
                  <div class="card-content">
                    <div class="media">
                      <div class="media-content">
                        <div class="name"><%= link_to item.name, public_item_path(item) %></div>
                      </div>
                    </div>
                    <div class="content">
                      <div class="price"><%= (item.price*1.1).floor %>円</div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          
        </div>
      </section>
    </div>
  </div>
</div>
