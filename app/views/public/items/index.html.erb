<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>ジャンル検索</h3>
        <table class="table table-striped">
          <tr>
            <th>ジャンル</th>
          </tr>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </table>
      </div>
    <div class="col-md-9">
      <h3>商品一覧</h3>
      <div class="card-deck">
        <% @items.each do |item| %>
          <div class="col-md-4">
              <div class="card">
                <div class="card-img-top">
                  <%= link_to public_item_path(item) do %>
                    <%= attachment_image_tag item, :image, format: 'png', fallback: "no_image.jpg", size: "100x100" %>
                  <% end %>
                </div>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to item.name, public_item_path(item) %>
                  </h5>
                  <p class="price">
                    <%= (item.price*1.1).floor %>円
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>