<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h3>ジャンル検索</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-9">
      <h3></h3>

      <div class="row1">
        <%= form_with model: @cart_item, url: public_cart_items_path, local: true do |f| %>
          <div class="col-4">
            <P class="form-group has-icon">
              <%= attachment_image_tag @item, :image, format: 'png', fallback: "no_image.jpg", size: "200x200" %>
            </p>
          </div>
          <div class="col-8">
            <p class="name"><%= @item.name %></p>
            <p class="intro"><%= @item.introduction %></p>
            <p class="price"><%= (@item.price*1.1).floor %>円</p>
            <p class="amount">
              個数：
              <%= f.select "amount", {'1': 1, '2': 2}, { include_blank: '選択してください'} %>
            </p>
            <p><%= f.hidden_field :item_id, :value => @item.id %></p>
          </div>
          <%= f.submit "カートに入れる", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
