<div class="container">
  <div class="row">
    <h2>会員の方はこちらからログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          メールアドレス　
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          パスワード　　　
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>　　　　　　　　　　　
        <%= f.submit "Log in", class: "btn btn-success" %>
        <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name), {class: "glyphicon glyphicon-eye-close eye-close"} %>
      <% end %>
    <div>
      <h2>登録がお済み<%= link_to "で", new_admin_session_path %>ない方</h2>
      <%= link_to "こちら", new_registration_path(resource_name) %>　から新規登録を行って下さい
    </div>
  </div>
</div>
