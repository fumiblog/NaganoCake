<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <div class="function_title">
        <h3>配送先登録・一覧</h3>
      </div>
      <%= form_with model: @address, url: public_addresses_path, local: true do |f| %>
      <div class="table-striped">

        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td></br>
        <th>住　　所</th>
        <td><%= f.text_field :address, :size => "50*50" %></td></br>
        <th>宛　　名</th>
        <td><%= f.text_field :name %>　<%= f.submit "登録する", class:"btn btn-success" %></td>

      </div>
      <% end %>
      <table class="table table-striped">
        <thead class="head">
          <tr>
            <th>郵便番号<th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
        <tbody>
          <tr>
            <td><%= address.postal_code %></td><td></td>
            <td class="address"><%= address.address %></td><td></td>
            <td><%= address.name %></td>
            <td><%= link_to "編集する", edit_public_address_path(address.id), class:"btn btn-primary" %></td>
            <td><%= link_to "削除する", public_address_path(address.id), method: :delete, class:"btn btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>