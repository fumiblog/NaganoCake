<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <div class="function_title">
        <h3>配送先登録・一覧</h3>
      </div>
        
        <div class="field">
          <%= form_with model: @address, url: addresses_path, local: true do |f| %>
          <a>郵便番号</a>
          <%= f.text_field :postal_code %>
          <%= f.radio_button 'is_active', 'true', checked: true %>
          <%= f.label '有効' %>
          <%= f.radio_button 'is_active', 'false', checked: false %>
          <%= f.label '無効' %>
          <%= f.submit '追加', class: 'btn btn-primary' %>
          <% end %>
        </div>
        
        <table class="table table-striped">
          <thead>
            <tr>
              <th>郵便番号<th>
              <th>住所</th>
              <th>宛名</th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td><td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %></td>
              <td><%= address.address %></td><td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %></td>
              <td><%= address.name %></td><td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %></td>
              
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>