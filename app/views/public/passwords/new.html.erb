<div class="container">
  <div class="row">
    <header>
      <div class="function_title">
        <h2>パスワードを忘れましたか？</h2>
      </div>
    </header>
    <%= form_for(resource, as: resource_name, url: new_customer_password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      メールアドレス　
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <%= f.submit "パスワードのリセットを行って下さい", class: "btn btn-danger" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
