<div class="container">
  <div class="row">
    <header>
      <div class="function_title">
        <h2>新規商品登録</h2>
      </div>
    </header>
    <div class="col-xs-5">
      <%= form_with model:@item, local:true do |item| %>
      <div class="form-group has-icon">
        <!--<label class="control-label sr-only" for="inputEmail">ProfileImage</label>-->
        <%= attachment_image_tag @item, :image_id, format: 'jpg', fallback: "no_image.jpg", size: "200x200" %>
      </div>
    </div>
    <div class="col-xs-7">
      <div class="row">
        <div class="col-xs-4">商品名</div>
        <div class="col-xs-8"><%= @item.name %></div>
      </div>
      <div class="row">
        <div class="col-xs-4">商品説明</div>
        <div class="col-xs-8"><%= @item.introduction %></div>
      </div>
      <div class="row">
        <div class="col-xs-4">ジャンル</div>
        <div class="col-xs-8"><%= @item.genre_id %></div>
      </div>
      <div class="row">
        <div class="col-xs-4">税込価格（税抜価格）</div>
        <div class="col-xs-8"><%= (@item.price * 1.1).floor %>（　<%= @item.price %>）円</div>
      </div>
      <div class="row">
        <div class="col-xs-4">販売ステータス</div>
        <div class="col-xs-8">
          <% if @item.is_active %>
          販売中
          <% else %>
          未販売
          <% end %>
          <div class="switch"><%= link_to "編集する", edit_item_path(@item.id), class:"btn btn-danger" %></div>
        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>