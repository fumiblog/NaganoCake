<div class="container">
  
    
    <div class="function_title">
      <h2>新規会員登録</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
  <table class="table table-striped">

    <tr>
      <td>名前</td>
      <td><%= f.text_field :last_name, placeholder: "姓を入力", style: "border: none" %><%= f.text_field :first_name, placeholder: "名を入力", style: "border: none" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana, placeholder: "セイを入力", style: "border: none" %><%= f.text_field :first_name_kana, placeholder: "メイを入力", style: "border: none" %></td>
    </tr>
    <tr>
      <td>郵便番号（ハイフン無し）</td>
      <td><%= f.text_field :postal_code, placeholder: "〒", style: "border: none" %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, placeholder: "住所を入力", style: "border: none", :size => "50*50" %></td>
    </tr>
    <tr>
      <td>電話番号（ハイフン無し）</td>
      <td><%= f.text_field :telephone_number, placeholder: "TELを入力", style: "border: none" %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力", style: "border: none", autocomplete: "email" %></td>
    </tr>
     <tr>
      <td>パスワード</td>
      <td>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <td>パスワード(再入力）</td>
      <td>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
    </tr>
    
    
  </table>
  <%= f.submit "新規登録", class:"btn btn-success" %>

    <% end %>
    <div class="function_title">
      <h2>既に登録済の方</h2>
    </div>
    <p><%= link_to "こちら", new_customer_session_path %>からログインして下さい。</p>
  </div>
</div>