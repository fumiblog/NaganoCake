<div class="container">
  <header>
    <div class="function_title">
      <h2>商品詳細</h2>
    </div>
  </header>
  <div class="row">
    <%= form_with model: @item, url: admins_item_path, local: true do |f| %>
    <div class="col-xs-3">
      <div class="form-group has-icon">
      <%= attachment_image_tag @item, :image, format: 'png', fallback: "no_image.jpg", size: "200x200" %>
      </div>
    </div>
    <div class="col-xs-9">
      <table class="table-striped">
        <tr class="box"><td>商品名</td><td><%= @item.name %></td></tr>
        <tr class="box"><td>商品説明</td><td><%= @item.introduction %></td></tr>
        <tr class="box"><td>ジャンル</td><td><%= @item.genre.name %></td></tr>
        <tr class="box"><td>税込価格（税抜価格）</td><td><%= (@item.price*1.1).floor %>円（<%= @item.price %>円）</td></tr>
        <tr class="box"><td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
            販売中
            <% else %>
            計画中
            <% end %>
            
          </td>
        </tr>
        
      </table>
      <div class="switch_left"><%= link_to "編集する", edit_admins_item_path(@item.id), class:"btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
  
</div>
