<div class="container">
  <header>
    <div class="function_title">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
    </div>
  </header>
  <%= form_with model: @customer, local: true do |f| %>
  <table class="table table-striped">

    <tr><td>顧客ID</td><td><%= @customer.id %></td></tr>
    <tr><td>名前</td><td><%= f.text_field :last_name, style: "border: none" %><%= f.text_field :first_name, style: "border: none" %></td></tr>
    <tr><td>フリガナ</td><td><%= f.text_field :last_name_kana, style: "border: none" %><%= f.text_field :first_name_kana, style: "border: none" %></td></tr>
    <tr><td>郵便番号</td><td><%= f.text_field :postal_code, style: "border: none" %></td></tr>
    <tr><td>住所</td><td><%= f.text_field :address, style: "border: none", :size => "50*50" %></td></tr>
    <tr><td>電話番号</td><td><%= f.text_field :telephone_number, style: "border: none" %></td></tr>
    <tr><td>メールアドレス</td><td><%= f.text_field :email, style: "border: none", :size => "30*30" %></td></tr>
    <tr><td>会員ステータス</td>  <%= f.label :is_deleted, :"有効会員" %>
  <%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, :"退会済み" %>
  <%= f.radio_button :is_deleted, :false %></tr>
  </table>
  <div class="switch_left"><%= f.submit "編集を保存する", class:"btn btn-primary" %></div>
  <% end %>

</div>
