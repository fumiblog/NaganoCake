<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <div class="function_title">
        <h3>会員一覧</h3>
      </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= link_to customer.id, edit_admins_customer_path(customer.id) %></td>
              <td><%= customer.last_name %><%= customer.first_name %></td>
              <td><%= customer.email %></td>
              <td><% if customer.is_deleted %>
              退会済み
              <% else %>
              有効会員
              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>