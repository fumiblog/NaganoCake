<div class="container">
  <div class="row">
    <table class="table table-striped">
      <tr>
        <th>注文日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
      
      <% @orders.each do |order| %>
      <% @sum = 0 %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admins_order_path(order.id) %></td>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <%# byebug %>
        <% order.order_details.each do |detail| %>
          <% @sum += detail.amount %>
        <% end %>
        <td><%= @sum %></td>
        <td><%= order.status_i18n %></td>
      </tr>
      <% end %>

    </table>
  </div>
</div>