<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <div class="function_title">
        <h3>ジャンル一覧・追加</h3>
      </div>

        <div class="field">
          <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
          <a>ジャンル</a>
          <%= f.text_field :name %>
          <%= f.radio_button 'is_active', 'true', checked: true %>
          <%= f.label '有効' %>
          <%= f.radio_button 'is_active', 'false', checked: false %>
          <%= f.label '無効' %>
          <%= f.submit '追加', class: 'btn btn-primary' %>
          <% end %>
        </div>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th>状態</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <% if genre.is_active %>
                  有効
                <% else %>
                  無効
                <% end %>
              </td>
              <td><%= link_to "編集", edit_admins_genre_path(genre.id), class:"btn btn-success" %></td>
              <td><%= link_to "削除", admins_genre_path(genre.id), method: :delete, data: { confirm: "本当に削除しますか？商品も削除されます！" }, class: "btn btn-danger" %> </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>